{
  "name": "spotify-pi-client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:serve": "concurrently -k \"npm:dev\" \"npm:electron:start\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=static/main.cjs",
    "electron:start": "wait-on tcp:5173 && electron . --enable-touch-events"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "axios": "^1.2.4",
    "clsx": "^1.2.1",
    "node-fetch": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.57.1",
    "vite-plugin-svgr": "^2.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.3",
    "electron-builder": "^23.6.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "wait-on": "^7.0.1"
  }
}
